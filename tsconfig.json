{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "development/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}