{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": true,
  "include": ["src/**/*", "test.setup.ts", "build.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/**/__tests__/**/*",
    "development/**/__tests__/**/*"
  ]
}
