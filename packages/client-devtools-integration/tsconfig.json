{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["DOM", "dom.asyncIterable", "ES2023"],
    "types": ["jest"],
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
